{
  "name": "crm",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint ./src",
    "dev": "cross-env NODE_ENV=development && DEV=true nodemon ./index.js",
    "build:server": "cross-env NODE_ENV=production webpack -p --config webpack/webpack.node.js",
    "build:client": "cross-env NODE_ENV=production webpack -p --config webpack/webpack.prod.js",
    "build": "yarn run clean && yarn run build:server && yarn run build:client",
    "start": "cross-env NODE_ENV=production node ./dist/server.js"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "compression": "^1.6.2",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "history": "^4.5.1",
    "hpp": "^0.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "next",
    "react-router-dom": "next",
    "serve-static": "^1.11.2",
    "styled-components": "^1.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.12",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "nodemon": "^1.11.0",
    "react-hot-loader": "3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.6.0"
  }
}
