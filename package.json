{
  "name": "crm",
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "dev": "cross-env NODE_ENV=development DEV=true nodemon ./index.js",
    "build:server": "cross-env NODE_ENV=production webpack -p --config config/webpack.config.node.js",
    "build:client": "cross-env NODE_ENV=production webpack -p --config config/webpack.config.prod.js",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "start": "cross-env NODE_ENV=development node ./build/server.js"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "koa": "2",
    "koa-better-body": "^3.0.2",
    "koa-compress": "^1.0.9",
    "koa-convert": "^1.2.0",
    "koa-static": "^2.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-router": "next"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-config-rackt": "^1.1.1",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "beta",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "react-hot-loader": "3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.4.0"
  }
}
